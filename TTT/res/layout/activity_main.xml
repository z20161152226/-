<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#225d7f"
    tools:context="com.example.ttt.MainActivity" >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="0dip" >
    
        <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Welcome to here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffcfd" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/userimage"
            android:textColor="#fffcfd" />

	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="请输入用户名"
            android:text=""
            android:paddingLeft="10dp"
            android:textColor="#f2f2f2"
            android:textColorHint="#f2f2f2" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_alignLeft="@+id/editText1"
            android:layout_alignRight="@+id/editText1"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="请输入密码"
            android:text=""
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#f2f2f2"
            android:textColorHint="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText2"
                android:layout_below="@+id/editText2"
                android:checked="false"
                android:paddingTop="0dp"
                android:text="记住密码"
                android:textColor="#f2f2f2" />

            <TextView
                android:id="@+id/textView_ForgotPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:text="忘记密码？"
                android:textColor="#f2f2f2" />

        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_btn_login"
            android:text="登      录"
            android:textColor="#fffcfd"
            android:textSize="20dp" />
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dip"
        android:layout_marginLeft="0dip"
        android:layout_gravity="center"
        android:text="本软件版权所有：韦祥"
        android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>